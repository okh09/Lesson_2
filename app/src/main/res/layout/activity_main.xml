<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="100dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnAC"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="AC"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="+/-"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="/"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="*"
                android:textSize="40sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn7"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="7"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="8"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="9"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="%"
                android:textSize="40sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn4"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="5"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="6"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="+"
                android:textSize="40sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn1"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="-"
                android:textSize="40sp" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn0"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="0"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="."
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:width="80dp"
                android:height="80dp"
                android:backgroundTint="@color/blue"
                android:text="="
                android:textSize="40sp" />

        </TableRow>
    </LinearLayout>


</LinearLayout>